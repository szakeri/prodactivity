FROM ubuntu:latest

RUN mkdir -p /root/devenv
WORKDIR /root
RUN DEBIAN_FRONTEND=noninteractive apt-get update &&\
    apt-get install -y apt-utils &&\
    apt-get upgrade -y
RUN DEBIAN_FRONTEND=noninteractive apt-get install -y ssh\
                                                      make\
                                                      git\
                                                      python\
                                                      python-pip\
                                                      docker.io
RUN pip install --upgrade pip
RUN pip install jinja2
RUN pip install mock
RUN pip install pytest
RUN pip install snakeviz
RUN pip install f5-sdk
RUN git clone -b master https://github.com/zancas/dotfiles.git
COPY devcontainers/entrypoints/base.sh /root/entrypoints/base.sh
RUN chmod +x /root/entrypoints/base.sh
WORKDIR /root/devenv
ENTRYPOINT ["/root/entrypoints/base.sh"]
