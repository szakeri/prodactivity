FROM ubuntu:16.10

RUN DEBIAN_FRONTEND=noninteractive apt-get update &&\
    apt-get install -y apt-utils &&\
    apt-get upgrade -y &&\
 apt-get install -y\
     emacs mtr ssh make git python python-pip docker.io sudo vim tmux &&\
    pip install --upgrade pip jinja2\
    git+https://bldr-git.int.lineratesystems.com/tools/pytest-meta.git\
    git+https://bldr-git.int.lineratesystems.com/tools/pytest-symbols.git\
    git+https://bldr-git.int.lineratesystems.com/tools/pytest-autolog.git\
    git+https://github.com/zancas/prodactivity.git
COPY entrypoints/base.sh /tmp/entrypoint.sh
RUN chmod 700 /tmp/entrypoint.sh
